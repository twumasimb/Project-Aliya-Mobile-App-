<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:fontFamily="serif-monospace"
        android:text="@string/project_name"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/project_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_name" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_description">

    </RelativeLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="315dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn_msg1"
            android:layout_margin="32dp"
            android:background="@drawable/rounded_button"
            android:padding="16dp"
            android:text="Message 1" />

        <Button
            android:id="@+id/btn_msg2"
            android:layout_margin="32dp"
            android:background="@drawable/rounded_button"
            android:padding="16dp"
            android:text="Message 2" />

        <Button
            android:id="@+id/btn_msg3"
            android:layout_margin="32dp"
            android:background="@drawable/rounded_button"
            android:padding="16dp"
            android:text="Message 3" />

        <Button
            android:id="@+id/btn_msg4"
            android:layout_margin="32dp"
            android:background="@drawable/rounded_button"
            android:padding="16dp"
            android:text="Message 4" />

        <Button
            android:id="@+id/btn_msg5"
            android:layout_margin="32dp"
            android:background="@drawable/rounded_button"
            android:padding="16dp"
            android:text="Message 5" />

        <Button
            android:id="@+id/btn_msg6"
            android:layout_margin="32dp"
            android:background="@drawable/rounded_button"
            android:padding="16dp"
            android:text="Message 6" />

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>